<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/primaryBackgroundColor"
    android:elevation="99dp"
    tools:context=".JourneyDetail"
    android:padding="@dimen/journey_detail_side_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/journey_label_bottom_padding"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/journey_detail_location"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primary_text_size"
            android:paddingEnd="@dimen/journey_label_placeholder_spacing"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/location_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/journey_label_bottom_padding"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/journey_detail_time_period"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primary_text_size"
            android:paddingEnd="@dimen/journey_label_placeholder_spacing"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/time_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/journey_label_bottom_padding"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/emission_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/journey_saved_emission"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primary_text_size"
            android:paddingEnd="@dimen/journey_label_placeholder_spacing"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/emission_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/journey_label_bottom_padding"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/distance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/distance_travelled"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primary_text_size"
            android:paddingEnd="@dimen/journey_label_placeholder_spacing"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/distance_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/map_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

</androidx.appcompat.widget.LinearLayoutCompat>