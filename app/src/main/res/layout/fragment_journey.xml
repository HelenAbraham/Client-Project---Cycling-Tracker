<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_container_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp">

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card"
        android:layout_width="@dimen/card_width"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:elevation="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/card_view"
        android:foreground="?android:attr/selectableItemBackground"
        android:animateLayoutChanges="true"
        android:layout_gravity="center_horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/journey_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_title_text_size"
                android:textColor="@color/primaryTextColor"
                android:textAppearance="?attr/textAppearanceListItem" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/emissions_saved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_context_text_size"
                android:textColor="@color/list_item_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_gravity="bottom"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/journey_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_context_text_size"
                android:textColor="@color/list_item_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_gravity="bottom"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/map_image_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scaleType="centerInside"
                android:layout_gravity="top"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/card_expand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_arrow_up_black_18dp"
            android:elevation="4dp"
            android:background="@drawable/circle"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.appcompat.widget.ContentFrameLayout>

